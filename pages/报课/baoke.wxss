/* report-course.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx;
}

.input-container {
  margin-bottom: 40rpx;
  margin-top: 40rpx;
}

.picker-container {
  margin-bottom: 40rpx;
  margin-top: 40rpx;
}

input, picker, button {
  width: 100%;
  height: 50rpx;
  border: 2rpx solid #ccc;
  border-radius: 6rpx;
  padding: 6rpx 12rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

button {
  background-color: #3498db;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  border: none;
  border-radius: 5rpx;
  width: 100%;
  height: 80rpx;
}